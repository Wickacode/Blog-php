{% extends 'base.html.twig' %} {% block body %}
<div class="pagesNav">
    <a href="index.php?action=getListArticles">← Revenir a la liste d'articles</a>
<div>

<div class="body-width">
    <h1 class="page-title">Ajouter un article</h1>
</div>

 <section class=" form-container body-width dfull">

    <div class="contact-form w50">
        <form action="index.php?action=createArticle" method="POST" enctype="multipart/form-data">
            <label for="title">Titre :</label>
            <input type="text" id="title" name="title" required>

            <label for="chapo">Chapo :</label>
            <input type="chapo" id="chapo" name="chapo" required>

            <label for="content">Description :</label>
            <textarea type="text" id="content" name="content" required></textarea>

            <label for="uploadfile">Image :</label>
            <input type="file" id="uploadfile" name="uploadfile" accept="image/png, image/jpeg">

            <label for="altImage">Description de l'image :</label>
            <input type="text" class="form-control" id="altImage" name="altImage">

            <button name="submitArticle" type="submit" class="btn dark bg-light-blue">Créer</button>
        </form>
    </div>
    {% if error is defined %}
            <br /><p>{{ error }}</p>
    {% endif %}
    {% if validAdd is defined %}
            <br /><p>{{ validAdd }}</p>
    {% endif %}
</section>
{% endblock %}
