{% extends 'base.html.twig' %} {% block body %}
<div class="pagesNav">
    <a href="index.php?action=getListArticles">‚Üê Revenir a la liste d'articles</a>
<div>

<div class="body-width">
    <h1 class="page-title">Ajouter un article</h1>
</div>

 <section class=" form-container body-width dfull">

    <div class="contact-form w50">
        <form action="index.php?action=updateArticle&id_article={{article.idArticle}}" method="POST" enctype="multipart/form-data">
            <label for="title">Titre :</label>
            <input type="text" id="title" name="title"  value="{{article.title}}" required>

            <label for="chapo">Chapo :</label>
            <input type="chapo" id="chapo" name="chapo"  value="{{article.chapo}}" required>

            <label for="content">Description :</label>
            <textarea type="text" id="content" name="content" required>{{article.content}} </textarea>
            
            <label> Image actuelle: </label>
            <img class="singleImg" src="/BLOG-PHP/public/img/upload/{{article.image}}" alt="{{article.title}}" />

            <label for="uploadfile">Nouvelle image :</label>
            <input type="file" id="uploadfile" name="uploadfile" accept="image/png, image/jpeg">

            <label for="altImage">Description de l'image :</label>
            <input type="text" class="form-control" id="altImage" name="altImage" value="{{article.alt}}" >

            <button name="modifyArticle" type="submit" class="btn dark bg-light-blue">Modifier</button>
        </form>
    </div>
    {% if error is defined %}
            <br /><p>{{ error }}</p>
    {% endif %}
    {% if validAdd is defined %}
            <br /><p>{{ validAdd }}</p>
    {% endif %}
</section>
{% endblock %}
