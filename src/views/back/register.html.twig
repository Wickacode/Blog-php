{% extends 'base.html.twig' %} {% block body %}

 <div class="body-width">
    <h2 class="page-title">Formulaire d'inscription</h2>
 </div>

 <section id="form-page" class="form-container body-width dfull">
    <div class="w50">
        <p class="form-text">En vous inscrivant, vous aurez la possibili√© d'ajouter des commentaires sous mes posts</p>
    </div>

    <div class="contact-form w50">
        <form action="index.php?action=register" method="POST">
            <label for="firstname">Prenom :</label>
            <input type="text" id="firstname" name="firstname" required>

            <label for="lastname">Nom :</label>
            <input type="text" id="lastname" name="lastname" required>

            <label for="pseudo">Pseudo :</label>
            <input type="text" id="pseudo" name="pseudo" required>

            <label for="email">Adresse mail :</label>
            <input type="email" id="email" name="email" required>

            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="password" required>

            <label for="confirmPass">Confirmer le mot de passe:</label>
            <input type="password" id="confirmPass" name="confirmPass" required>

            <button type="submit" class="btn dark bg-light-blue" name="submitRegister">S'inscrire</button>
        </form>
    </div>
     {% if error is defined %}
            <br /><p>{{ error }}</p>
    {% endif %}

</section>
{% endblock %}
